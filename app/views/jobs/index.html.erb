<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Wage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="row">
      <div class="col-sm-12">
        <% @listings.each do |listing| %>
        <tr>
          <td><%= image_tag listing.image.url(:thumb), alt: "Responsive image" %><td/>
          <td><%= listing.name %></td>
          <td><%= listing.description %></td>
          <td>$<%= listing.wage %>/hour</td>
          <td><%= link_to 'More Info', listing %></td>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </div>
    </div>
  </tbody>
</table>

<br>

